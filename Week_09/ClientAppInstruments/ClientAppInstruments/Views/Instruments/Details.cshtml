@model ClientAppInstruments.Controllers.InstrumentWithLink

@{
    ViewBag.Title = "Details";
}

<h2>Instrument details</h2>

<div>
    <h4>Musical instrument</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ManufacturerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ManufacturerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InstrumentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InstrumentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModelCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModelCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MSRP)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MSRP)
        </dd>

        <!-- New - display the sound clip player and photo (if any) -->

        <dt>
            Sound clip
        </dt>

        <dd>
            @if (Model.SoundClipMediaLength > 0)
            {
                <audio controls="controls" src='@("/instruments/details/" + Model.Id + "/soundclip")' />
            }
            else
            {
                <span>(none)</span>
            }
        </dd>

        <dt>
            Photo
        </dt>

        <dd>
            @if (Model.PhotoMediaLength > 0)
            {
                <img src='@("/instruments/details/" + Model.Id + "/photo")' alt="" class="img-thumbnail" width="280" />
            }
            else
            {
                <span>(none)</span>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Edit the Photo", "EditPhoto", new { id = Model.Id }) |
    @Html.ActionLink("Edit the Sound Clip", "EditSoundClip", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
